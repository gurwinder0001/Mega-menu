    /* Active state for mobile menu items */
    .mobile-main-menu li.active > .mobile-menu-item > a {
      color: #ffffff;
      font-weight: bold;
    }
  }
</style>

<script>
  xMegaMenu('#mega-menu', {
    responseWidth: 1000,
    isRtl: true,
    mainTitle: '🖤 xStack menu 🖤',
    disableLinks: true,
    fixedTop: true,
    onCloseSideMenu: function () {
      console.log('closed');
    },
    onOpenSideMenu: function () {
      console.log('opened');
    }
  });

  function toggleMenu() {
    document.querySelector('.mobile-menu-drawer').classList.toggle('open');
    document.querySelector('.mobile-menu-overlay').classList.toggle('active');
  }

  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Handle submenu toggles
    document.querySelectorAll('.submenu-toggle').forEach(toggle => {
      toggle.addEventListener('click', function(e) {
        e.preventDefault();
        const parentLi = this.closest('li');
        const submenu = parentLi.querySelector('.submenu');
        
        if (submenu.style.display === 'block') {
          submenu.style.display = 'none';
          this.textContent = '+';
        } else {
          submenu.style.display = 'block';
          this.textContent = '-';
        }
      });
    });
    
    // Handle childmenu toggles
    document.querySelectorAll('.childmenu-toggle').forEach(toggle => {
      toggle.addEventListener('click', function(e) {
        e.preventDefault();
        const parentLi = this.closest('li');
        const childmenu = parentLi.querySelector('.childmenu');
        
        if (childmenu.style.display === 'block') {
          childmenu.style.display = 'none';
          this.textContent = '+';
        } else {
          childmenu.style.display = 'block';
          this.textContent = '-';
        }
      });
    });
    
    // Close all submenus when clicking a link (optional)
    document.querySelectorAll('.mobile-menu-drawer a').forEach(link => {
      link.addEventListener('click', function() {
        if (!this.nextElementSibling) { // Only close if not clicking a toggle
          document.querySelector('.mobile-menu-drawer').classList.remove('open');
          document.querySelector('.mobile-menu-overlay').classList.remove('active');
        }
      });
    });
  });
</script>




</div>
